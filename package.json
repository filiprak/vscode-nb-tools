{
  "name": "vscode-nb-tools",
  "displayName": "VSCode NetBeans tools integration",
  "version": "0.0.1",
  "description": "Integrates netbeans tools into plugin",
  "main": "./out/src/extension",
  "scripts": {
    "build": "npm run trash && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "trash": "trash out",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "download": "node ./scripts/download.js",
    "pretest": "npm run build",
    "test": "cross-env CODE_TESTS_WORKSPACE=testProject node ./node_modules/vscode/bin/test",
    "prepublishOnly": "npm run build && vsce publish"
  },
  "keywords": [
    "netbeans",
    "vscode"
  ],
  "publisher": "filiprak",
  "author": "filiprak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/filiprak/vscode-nb-tools.git"
  },
  "bugs": {
    "url": "https://github.com/filiprak/vscode-nb-tools/issues"
  },
  "homepage": "https://github.com/filiprak/vscode-nb-tools#readme",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nbtools.format",
        "title": "nbtools: Format This File",
        "when": "!inOutput && editorFocus && editorLangId == php"
      },
      {
        "command": "nbtools.openOutput",
        "title": "nbtools: Open Output"
      }
    ],
    "configuration": {
      "title": "nbtools Configuration options",
      "type": "object",
      "properties": {
        "nbtools.php_bin": {
          "type": "string",
          "default": "php",
          "description": "php executable path"
        },
        "nbtools.detect_indent": {
          "type": "boolean",
          "default": false,
          "description": "auto detecting indent type and size (will ignore indent_with_space)"
        },
        "nbtools.psr1": {
          "type": "boolean",
          "default": false,
          "description": "activate PSR1 style"
        },
        "nbtools.psr1_naming": {
          "type": "boolean",
          "default": false,
          "description": "activate PSR1 style - Section 3 and 4.3 - Class and method names case."
        },
        "nbtools.psr2": {
          "type": "boolean",
          "default": true,
          "description": "activate PSR2 style"
        },
        "nbtools.indent_with_space": {
          "type": [
            "integer",
            "boolean"
          ],
          "default": 4,
          "description": "use spaces instead of tabs for indentation. Default 4"
        },
        "nbtools.enable_auto_align": {
          "type": "boolean",
          "default": false,
          "description": "enable auto align of ST_EQUAL and T_DOUBLE_ARROW"
        },
        "nbtools.visibility_order": {
          "type": "boolean",
          "default": false,
          "description": "fixes visibiliy order for method in classes - PSR-2 4.2"
        },
        "nbtools.passes": {
          "type": "array",
          "default": [],
          "description": "call specific compiler pass"
        },
        "nbtools.exclude": {
          "type": "array",
          "default": [],
          "description": "disable specific passes"
        },
        "nbtools.smart_linebreak_after_curly": {
          "type": "boolean",
          "default": false,
          "description": "convert multistatement blocks into multiline blocks"
        },
        "nbtools.yoda": {
          "type": "boolean",
          "default": false,
          "description": "yoda-style comparisons"
        },
        "nbtools.cakephp": {
          "type": "boolean",
          "default": false,
          "description": "Apply CakePHP coding style"
        },
        "nbtools.custom_arguments": {
          "type": "string",
          "default": "",
          "description": "provide custom arguments to overwrite default arguments generated by config"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.13",
    "cross-env": "^7.0.3",
    "mocha": "^9.2.0",
    "pjson": "^1.0.9",
    "request": "^2.88.2",
    "trash-cli": "^5.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "detect-indent": "^6.0.0",
    "find-up": "^5.0.0"
  }
}

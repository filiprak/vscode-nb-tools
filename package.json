{
  "name": "vscode-nb-tools",
  "displayName": "VSCode NetBeans tools integration",
  "version": "0.0.1",
  "description": "Integrates netbeans tools into plugin",
  "main": "./out/src/extension",
  "scripts": {
    "build": "npm run trash && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "trash": "trash out",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "download": "node ./scripts/download.js",
    "pretest": "npm run build",
    "test": "cross-env CODE_TESTS_WORKSPACE=testProject node ./node_modules/vscode/bin/test",
    "test:loader": "ts-node src/NbPreferencesLoader.ts",
    "release": "npm run download && npm run build && vsce package --out bin/"
  },
  "keywords": [
    "netbeans",
    "vscode"
  ],
  "publisher": "filiprak",
  "author": "Filip Rak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/filiprak/vscode-nb-tools.git"
  },
  "bugs": {
    "url": "https://github.com/filiprak/vscode-nb-tools/issues"
  },
  "homepage": "https://github.com/filiprak/vscode-nb-tools#readme",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nbtools.format",
        "title": "nbtools: Format This File",
        "when": "!inOutput && editorFocus && editorLangId == php"
      },
      {
        "command": "nbtools.openOutput",
        "title": "nbtools: Open Output"
      }
    ],
    "configuration": {
      "title": "nbtools Configuration options",
      "type": "object",
      "properties": {
        "nbtools.java_bin": {
          "type": "string",
          "default": "java",
          "description": "Java executable path"
        },
        "nbtools.php_formatter_config": {
          "type": "object",
          "default": null,
          "description": "NetBeans php formatter config",
          "properties": {
            "indent-shift-width": {
              "title": "Indent size",
              "type": "number",
              "default": 4
            },
            "tab-size": {
              "title": "Tab size",
              "type": "number",
              "default": 4
            }
          }
        },
        "nbtools.java_custom_args": {
          "type": "string",
          "default": "",
          "description": "Provide additional java nbtools command arguments"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.13",
    "cross-env": "^7.0.3",
    "mocha": "^9.2.0",
    "pjson": "^1.0.9",
    "request": "^2.88.2",
    "trash-cli": "^5.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "vsce": "^2.6.7",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@types/yauzl": "^2.9.2",
    "yauzl": "^2.10.0",
    "xml2js": "^0.4.23",
    "@types/xml2js": "^0.4.9"
  }
}
